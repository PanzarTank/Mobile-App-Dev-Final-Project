<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shelterconnect.controller.MakeDonationActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewBillingAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Billing Address" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewBillingAddr"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/textViewBillingAddr"
            android:hint="First Name"
            android:autoText="false"
            android:ems="15"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextFirstName"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@+id/editTextFirstName"
            android:hint="Last Name"
            android:ems="15"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextAddrLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextFirstName"
            android:layout_marginTop="28dp"
            android:hint="Address Line 1"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editTextAddrLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextAddrLine1"
            android:hint="Address Line 2"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextAddrLine2"
            android:layout_centerVertical="true"
            android:layout_marginEnd="46dp"
            android:hint="City"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextCity"
            android:layout_alignStart="@+id/editTextLastName"
            android:hint="State"
            android:ems="2"
            android:inputType="textPersonName"
            android:maxLength="2" />

        <EditText
            android:id="@+id/editTextZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextState"
            android:layout_toEndOf="@+id/textViewBillingAddr"
            android:hint="Zipcode"
            android:ems="5"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextCity"
            android:layout_marginTop="31dp"
            android:text="Card Number" />

        <EditText
            android:id="@+id/editTextCardNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:ems="16"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextCardNum"
            android:layout_marginTop="12dp"
            android:text="Expiration Date" />

        <EditText
            android:id="@+id/editTextExpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:ems="5"
            android:inputType="date"
            android:maxLength="5" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextExpDate"
            android:layout_alignStart="@+id/editTextState"
            android:layout_marginStart="12dp"
            android:text="CCV" />

        <EditText
            android:id="@+id/editTextCCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:ems="3"
            android:inputType="number"
            android:maxLength="3" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Submit" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
